<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OneList" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_700</item>
        <item name="colorPrimaryVariant">@color/grey_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/accentColor_variant</item>
        <item name="colorOnSecondary">@color/onAccentColor</item>

        <item name="colorSurface">@color/accentColor</item>
        <item name="colorOnSurface">@color/onAccentColor</item>
        <item name="colorOutline">@color/accentColor_variant</item>

        <!-- Other colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_200</item>
        <item name="android:windowBackground">@color/grey_900</item>
    </style>
</resources>