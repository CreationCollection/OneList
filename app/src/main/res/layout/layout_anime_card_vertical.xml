<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/ic_round_stroked_rect_small"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/anime_image"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:background="@drawable/ic_round_rect_small"
            android:backgroundTint="?colorPrimaryVariant"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/anime_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="MOVIE"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="?colorSecondary"
            android:background="@drawable/ic_round_rect_small"
            android:backgroundTint="@color/grey_900"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:layout_gravity="center_horizontal"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/anime_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Naruto Shippuden the movie: the will of fire"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="center"/>
</LinearLayout>